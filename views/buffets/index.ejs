<%- layout('layouts/boilerplate') -%>

    <h1>All Buffets</h1>

    <div>
        <a href="/buffets/new">Add Buffet</a>
    </div>


    <% buffets.forEach((buffet) => { %>

        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (buffet.images.length) { %>
                        <img class="img-fluid" src="<%= buffet.images[0].url %>" alt="">
                    <% } else { %>
                        <img class="img-fluid" src="https://images.unsplash.com/photo-1464500542410-1396074bf230" alt="">
                    <% } %>
                </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title fw-bold"><%= buffet.title %></h5>

                        <p class="card-text"><%= buffet.description %>
                        </p>

                        <p class="card-text text-secondary fw-bold">
                            <small><%= buffet.location %></small>
                        </p>

                        <p>
                            <a class="btn btn-primary" href="/buffets/<%= buffet._id %>">View <%= buffet.title %></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
