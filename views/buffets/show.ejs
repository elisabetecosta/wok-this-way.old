<%- layout('layouts/boilerplate') -%>


    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-5">

                <img class="card-img-top" src="<%= buffet.image %>" alt="">

                <div class="card-body">
                    <h5 class="card-title fw-bold">
                        <%= buffet.title %>
                    </h5>

                    <p class="list-group-item card-text">
                        <%= buffet.description %>
                    </p>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-secondary fw-bold">
                        <%= buffet.location %>
                    </li>


                    <li class="list-group-item">
                        <%= buffet.price %> â‚¬
                    </li>
                </ul>

                <div class="card-body">
                    <a class="card-link btn btn-info" href="/buffets/<%= buffet._id %>/edit">Edit</a>
                    <form class="d-inline" action="/buffets/<%= buffet._id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>