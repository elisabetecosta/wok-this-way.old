<%- layout('layouts/boilerplate') -%>

    <div class="row">
        <h1 class="text-center">Edit Buffet</h1>

        <div class="col-6 offset-3">
            <form action="/buffets/<%= buffet._id %>?_method=PUT" method="post" novalidate class="needs-validation"
                enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="buffet[title]" value="<%= buffet.title %>"
                        required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="buffet[location]"
                        value="<%= buffet.location %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Buffet Price</label>
                </div>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="price" name="buffet[price]" placeholder="0"
                        aria-label="price" aria-describedby="price-label" value="<%= buffet.price %>" required>
                    <span class="input-group-text" id="price-label">â‚¬</span>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="buffet[description]"
                        required><%= buffet.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Add/Delete Images</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div>

                <div class="mb-3">
                    <% buffet.images.forEach((img, i) => { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
    
                        <div class="form-check form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                            <label for="image-<%= i %>">Delete?</label>
                        </div>
                    <% }) %>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update Buffet</button>
                </div>
            </form>

            <a href="/buffets/<%= buffet._id %>">Back To Buffet</a>
        </div>
    </div>